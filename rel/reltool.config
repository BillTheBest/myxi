{sys, [
    {lib_dirs, ["../apps", "../deps"]},
    {rel, "amqpoxy", "0.1.0", [
        kernel,
        stdlib,
        lager,
        cowboy,
        amqpoxy
    ]},
    {rel, "start_clean", "", [
        kernel,
        stdlib
    ]},
    {boot_rel, "amqpoxy"},
    {profile, embedded},
    {excl_sys_filters, [
        "^bin/.*",
        "^erts.*/bin/(dialyzer|typer)"
    ]},
    {app, amqpoxy, [{incl_cond, include}]}
]}.

{target_dir, "package"}.

{overlay, [
   {mkdir, "log/sasl"},
   {copy, "files/erl", "\{\{erts_vsn\}\}/bin/erl"},
   {copy, "files/nodetool", "\{\{erts_vsn\}\}/bin/nodetool"},
   {copy, "files/amqpoxy", "bin/amqpoxy"},
   {copy, "files/app.config", "etc/app.config"},
   {copy, "files/vm.args", "etc/vm.args"}
]}.
